.fl-left
   & > h2
     display: inline-block
     text-align: center
     color: #115c89;
     font-size: 30px;
     text-transform: uppercase;
     line-height: 1em
     margin: 20px 0
     width: 100%
.text-grey
  & > 
    h2
      display: inline-block
      color: #5bc5ec;
      font-size: 24px;
      text-transform: uppercase;
      line-height: 1em
      text-align: center
      margin: 20px 0
    ul
      padding: 0
      display: block
      li
        display: inline-block;
        color: #115c89;
        width: 100%
        background-color: #efefef;
        padding: 15px
        margin-bottom: 5px
        &:before
          content: ''
          display: inline-block
          width: 8px;
          height: 8px
          -webkit-border-radius: 4px;
          -moz-border-radius: 4px;
          border-radius: 4px;
          background-color: #ed598a;
          margin-right: 10px
          vertical-align: middle
    p
      text-align: center
      color: #3a414a;
      margin: 10px 0
      strong
        display: inline-block
        color: #115c89;
        font-size: 30px;
        text-transform: uppercase;
        line-height: 1em
        text-align: center
    h3
      display: inline-block
      line-height: 1em
      color: #3a414a;
      font-size: 30px;
      margin: 10px 0

    .table-list
      text-align: center
      thead
        tr
          th
            background-color: #115c89;
            color: #fff
            border: 1px solid white
            padding: 15px
            &:last-child
              background-color: #ed598a;
       tbody
        tr
          border: 0
          td
            padding: 15px
            background-color: whitesmoke;
            border: 1px solid white
            color: #000
            &:first-child
              text-align: left
            &:last-child
              background-color: #ed598a;
              color: #fff

