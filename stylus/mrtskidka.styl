.fl-left
   & > h2
     display: inline-block
     text-align: center
     color: #115c89;
     font-size: 30px;
     text-transform: uppercase;
     line-height: 1em
     margin: 20px 0
     width: 100%
.text-grey
  & > 
    h2
      display: inline-block
      color: #5bc5ec;
      font-size: 24px;
      text-transform: uppercase;
      line-height: 1em
      text-align: center
      margin: 20px 0
    ul
      padding: 0
      display: block
      li
        display: inline-block;
        color: #115c89;
        width: 100%
        background-color: #efefef;
        padding: 15px
        margin-bottom: 5px
        box-sizing border-box
        &:before
          content: ''
          display: inline-block
          width: 8px;
          height: 8px
          -webkit-border-radius: 4px;
          -moz-border-radius: 4px;
          border-radius: 4px;
          background-color: #ed598a;
          margin-right: 10px
    p
      text-align: center
      color: #3a414a;
      margin: 10px 0
      strong
        display: inline-block
        color: #115c89;
        font-size: 24px;
        text-transform: uppercase;
        line-height: 1em
        text-align: center
    h3
      display: inline-block
      line-height: 1em
      color: #3a414a;
      font-size: 30px;
      margin: 10px 0

    .table-list
      text-align: center
      thead
        tr
          th
            background-color: #115c89;
            color: #fff
            border: 1px solid white
            padding: 15px
            &:last-child
              background-color: #ed598a;
       tbody
        tr
          border: 0
          td
            padding: 15px
            background-color: whitesmoke;
            border: 1px solid white
            color: #000
            &:first-child
              text-align: left
            &:last-child
              background-color: #ed598a;
              color: #fff

p.offer
  display: block
  font-weight: bold
  margin: 20px auto
  font-size: 18px
  line-height: 2em
  width: 80%
  text-align: center
  span
    color: red
  s
    font-weight: normal
  .order
    display: inline-block
    font-size: 16px
    font-weight: normal
    font-style: italic;
    color: white;
    background-color: #ed598a;
    padding: 5px 25px
    margin: 20px auto


.list__skidka
  padding: 30px
  margin: 20px 0
  h2
    text-transform: uppercase
    text-align: center
    display: inline-block
    width: 100%
    margin: 30px 0
    font-weight: bold
    font-size: 20px
    color: #115c89;

  li
    display: inline-block
    width: 100%
    padding: 10px
    margin-bottom: 20px
    & > p
      display: inline-block
      width: 80%
      vertical-align: middle
      color: #115c89;
      font-weight: bold;
      margin: 0
    i
      display: inline-block
      width: 20px
      height: 20px
      vertical-align: middle
      margin-right: 15px
      img
        width: 100%
  & > p
    display: inline-block
    text-align: center
  &--a
    border: 2px solid red
    text-align: center
    ul
      li
        text-align: left
        //margin-bottom: 20px
    p
      //margin: 0
      line-height: 1.5em
    .order-btn
      margin: 0 auto
      display: inline-block
      padding: 10px 40px
      background-color: red
      color white
    .new
      color: red
    .old
      color: #115c89;
      position: relative;
      &:before {
        border-bottom: 3px solid red;
        position: absolute;
        content: "";
        width: 100%;
        height: 50%;
        transform: rotate(-7deg);
      }

  &--b
    background-color: #e8f4fb;
    li
      display: inline-block
      width: 46%
      padding: 10px
      //p
      //  margin: 0
    h2
      &:after
        content: ''
        display: block
        width: 75px;
        height: 2px;
        background-color: #ed598a;
        margin: 10px auto

  &--c
    background-color: #eaf8d3;
    h2
      &:after
        content: ''
        display: block
        width: 75px;
        height: 2px;
        background-color: #abc77e;
        margin: 10px auto